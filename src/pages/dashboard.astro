---
import Layout from "../layouts/Layout.astro";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

// Si no hay sesi칩n, simulamos una para que el usuario pueda ver el dise침o
// En producci칩n, podr칤as redirigir a una p치gina de login
const user = session?.user || {
  name: "Invitado Premium",
  email: "invitado@example.com",
  image: "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix",
};

const stats = [
  { label: "Vistas", value: "12.4K", change: "+14%" },
  { label: "Seguidores", value: "5.2K", change: "+8%" },
  { label: "Proyectos", value: "24", change: "+3" },
];

const categories = [
  { name: "League of Legends", viewers: "150K", color: "bg-blue-500" },
  { name: "Just Chatting", viewers: "400K", color: "bg-pink-500" },
  { name: "Software Development", viewers: "25K", color: "bg-green-500" },
  { name: "Minecraft", viewers: "80K", color: "bg-orange-500" },
];
---

<Layout title="Dashboard | Bloidev Bento">
  <main
    class="min-h-screen bg-[#020817] text-slate-200 font-sans selection:bg-indigo-500/30"
  >
    <div class="max-w-[1600px] mx-auto p-4 md:p-8">
      <!-- Header Dashboard -->
      <header
        class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8"
      >
        <div>
          <h1 class="text-3xl font-bold text-white tracking-tight">
            Panel de Control
          </h1>
          <p class="text-slate-400">
            Bienvenido de nuevo, {user.name.split(" ")[0]}
          </p>
        </div>
        <div
          class="flex items-center gap-4 bg-slate-900/50 p-2 rounded-2xl border border-slate-800"
        >
          <img src={user.image} alt={user.name} class="w-10 h-10 rounded-xl" />
          <div class="hidden sm:block pr-4">
            <p class="text-sm font-bold text-white leading-none">{user.name}</p>
            <p class="text-xs text-slate-500">{user.email}</p>
          </div>
        </div>
      </header>

      <!-- Grid de Widgets -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Widget 1: Nombre Grande (Centro) -->
        <div
          class="lg:col-span-2 bg-gradient-to-br from-indigo-600 via-violet-600 to-purple-700 rounded-[2.5rem] p-8 flex flex-col items-center justify-center text-center shadow-xl shadow-indigo-500/10 min-h-[300px] relative overflow-hidden group"
        >
          <div
            class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-20"
          >
          </div>
          <div class="absolute top-0 right-0 p-8">
            <div
              class="w-20 h-20 bg-white/10 rounded-full blur-3xl group-hover:bg-white/20 transition-all duration-700"
            >
            </div>
          </div>
          <h2
            class="text-6xl md:text-8xl font-black text-white tracking-tighter drop-shadow-2xl z-10 transition-transform duration-500 group-hover:scale-105"
          >
            {user.name.split(" ")[0]}
          </h2>
          <p
            class="text-white/80 font-medium text-xl mt-2 z-10 uppercase tracking-[0.2em]"
          >
            Creative Developer
          </p>
        </div>

        <!-- Widget 2: Redes Sociales + Foto Fondo -->
        <div
          class="lg:col-span-1 lg:row-span-2 relative rounded-[2.5rem] overflow-hidden group"
        >
          <img
            src="/img/Foto-C.png"
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            alt="Social BG"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"
          >
          </div>
          <div class="absolute inset-0 p-8 flex flex-col justify-end">
            <h3 class="text-2xl font-bold text-white mb-4">Conecta conmigo</h3>
            <div class="grid grid-cols-2 gap-3">
              <a
                href="#"
                class="bg-white/10 backdrop-blur-md hover:bg-white/20 p-4 rounded-2xl border border-white/10 transition-all text-center"
              >
                <span class="text-white font-bold block">Twitch</span>
                <span class="text-white/50 text-xs">@bloidev</span>
              </a>
              <a
                href="#"
                class="bg-white/10 backdrop-blur-md hover:bg-white/20 p-4 rounded-2xl border border-white/10 transition-all text-center"
              >
                <span class="text-white font-bold block">X</span>
                <span class="text-white/50 text-xs">@bloidev</span>
              </a>
              <a
                href="#"
                class="bg-white/10 backdrop-blur-md hover:bg-white/20 p-4 rounded-2xl border border-white/10 transition-all text-center"
              >
                <span class="text-white font-bold block">Insta</span>
                <span class="text-white/50 text-xs">@bloidev</span>
              </a>
              <a
                href="#"
                class="bg-white/10 backdrop-blur-md hover:bg-white/20 p-4 rounded-2xl border border-white/10 transition-all text-center"
              >
                <span class="text-white font-bold block">GitHub</span>
                <span class="text-white/50 text-xs">bloidev</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Widget 3: Foto de Perfil / Imagen -->
        <div
          class="lg:col-span-1 rounded-[2.5rem] bg-slate-900 border border-slate-800 overflow-hidden relative group"
        >
          <img
            src="/img/Foto-A.png"
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
            alt="Profile Detail"
          />
          <div
            class="absolute top-4 left-4 bg-black/50 backdrop-blur-md text-white text-xs font-bold px-3 py-1 rounded-full border border-white/10"
          >
            EST. 2024
          </div>
        </div>

        <!-- Widget 4: Sobre M칤 -->
        <div
          class="lg:col-span-2 bg-slate-900 border border-slate-800 rounded-[2.5rem] p-8 flex flex-col justify-center relative group overflow-hidden"
        >
          <div
            class="absolute -right-10 -bottom-10 w-40 h-40 bg-indigo-500/5 rounded-full blur-3xl"
          >
          </div>
          <h3
            class="text-2xl font-bold text-white mb-4 flex items-center gap-2"
          >
            <span
              class="w-8 h-8 bg-indigo-500/20 text-indigo-400 rounded-lg flex items-center justify-center text-sm font-black"
              >?</span
            >
            Sobre m칤
          </h3>
          <p class="text-slate-400 text-lg leading-relaxed">
            Soy un desarrollador apasionado por crear interfaces que no solo
            funcionen, sino que <span class="text-indigo-400 font-medium"
              >emocionen</span
            >. Especializado en React, Astro y dise침o de sistemas escalables.
          </p>
          <div class="mt-6 flex gap-3">
            <span
              class="px-4 py-1 bg-slate-800 rounded-full text-xs font-bold text-slate-300"
              >Santiago, CL</span
            >
            <span
              class="px-4 py-1 bg-slate-800 rounded-full text-xs font-bold text-slate-300"
              >Freelance</span
            >
          </div>
        </div>

        <!-- Widget 5: Patreon -->
        <div
          class="bg-orange-600/10 border border-orange-500/20 rounded-[2.5rem] p-8 flex flex-col group hover:bg-orange-600/20 transition-all"
        >
          <div
            class="w-12 h-12 bg-orange-500 text-white rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-orange-500/20 transition-transform group-hover:rotate-12"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M12 21a9 9 0 0 0 9-9 9 9 0 0 0-9-9 9 9 0 0 0-9 9 9 9 0 0 0 9 9Z"
              ></path><path d="M12 8v8"></path><path d="M8 12h8"></path></svg
            >
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Patreon</h3>
          <p class="text-slate-400 text-sm mb-6">
            Apoya mi trabajo y obt칠n beneficios exclusivos como acceso
            anticipado y mentor칤as.
          </p>
          <a
            href="#"
            class="mt-auto w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 rounded-2xl text-center transition-all"
          >
            Suscribirse
          </a>
        </div>

        <!-- Widget 6: Cuenta de LIVE -->
        <div
          class="bg-slate-900 border border-slate-800 rounded-[2.5rem] p-8 flex flex-col group relative overflow-hidden"
        >
          <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-2">
              <div
                class="w-3 h-3 bg-red-500 rounded-full animate-pulse shadow-[0_0_10px_rgba(239,68,68,0.5)]"
              >
              </div>
              <span
                class="text-xs font-black uppercase tracking-widest text-red-500"
                >Live Status</span
              >
            </div>
            <span class="text-slate-500 text-xs">Twitch.tv</span>
          </div>
          <div class="flex items-center gap-4 mb-2">
            <div
              class="w-12 h-12 bg-purple-500 rounded-full flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                ></path></svg
              >
            </div>
            <div>
              <h3 class="font-bold text-white">Bloidev Live</h3>
              <p class="text-xs text-slate-500">542 espectadores</p>
            </div>
          </div>
          <div
            class="mt-6 bg-slate-950/50 p-4 rounded-2xl border border-slate-800"
          >
            <p class="text-xs font-medium text-slate-400 mb-1">
              Jugando ahora:
            </p>
            <p class="text-sm font-bold text-white">
              Coding: Building Bento Grids
            </p>
          </div>
        </div>

        <!-- Widget 7: Categor칤as Streaming -->
        <div
          class="lg:col-span-2 bg-slate-900 border border-slate-800 rounded-[2.5rem] p-8 flex flex-col group"
        >
          <h3 class="text-xl font-bold text-white mb-6">Categor칤as Top</h3>
          <div class="space-y-4">
            {
              categories.map((cat) => (
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class={`w-2 h-2 rounded-full ${cat.color}`} />
                    <span class="text-slate-300 font-medium">{cat.name}</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <span class="text-slate-500 text-xs">{cat.viewers}</span>
                    <div class="w-24 bg-slate-800 h-1.5 rounded-full overflow-hidden">
                      <div
                        class={`${cat.color} h-full transition-all duration-1000 group-hover:w-full`}
                        style="width: 65%;"
                      />
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Widget 8: Contacto -->
        <div
          class="bg-indigo-600 rounded-[2.5rem] p-8 flex flex-col text-white group hover:shadow-2xl hover:shadow-indigo-500/20 transition-all"
        >
          <h3 class="text-xl font-bold mb-4">Hablemos</h3>
          <p class="text-indigo-100 text-sm mb-8">
            쯊ienes un proyecto en mente? Env칤ame un mensaje y respondere en
            menos de 24 horas.
          </p>
          <div class="space-y-4">
            <div
              class="flex items-center gap-3 bg-white/10 p-4 rounded-2xl border border-white/10"
            >
              <span class="text-xl">游닎</span>
              <span class="font-medium text-sm">hola@bloidev.com</span>
            </div>
            <button
              class="w-full bg-white text-indigo-600 font-bold py-4 rounded-2xl hover:bg-indigo-50 transition-colors"
            >
              Enviar Email
            </button>
          </div>
        </div>

        <!-- Widget 9: Portafolio -->
        <div
          class="lg:col-span-1 bg-slate-900 border border-slate-800 rounded-[2.5rem] p-8 flex flex-col group"
        >
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white">Portafolio</h3>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-indigo-500"
              ><path d="M7 7h10v10"></path><path d="M7 17 17 7"></path></svg
            >
          </div>
          <div class="space-y-3">
            <div
              class="relative rounded-2xl overflow-hidden aspect-video bg-slate-800"
            >
              <div
                class="absolute inset-0 bg-gradient-to-br from-indigo-500/20 to-purple-500/20"
              >
              </div>
              <div class="absolute bottom-3 left-3">
                <p class="text-[10px] font-bold text-white/50 uppercase">
                  Case Study
                </p>
                <p class="text-sm font-bold text-white">Astro Bento Grid</p>
              </div>
            </div>
            <div
              class="relative rounded-2xl overflow-hidden aspect-video bg-slate-800"
            >
              <div
                class="absolute inset-0 bg-gradient-to-br from-green-500/20 to-teal-500/20"
              >
              </div>
              <div class="absolute bottom-3 left-3">
                <p class="text-[10px] font-bold text-white/50 uppercase">
                  Web App
                </p>
                <p class="text-sm font-bold text-white">Dashboard Design</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .float {
    animation: float 6s ease-in-out infinite;
  }
</style>

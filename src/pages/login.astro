---
import Layout from "../layouts/Layout.astro";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

if (session) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="Acceso | Bloidev Bento">
  <main
    class="min-h-screen bg-[#020817] flex items-center justify-center p-4 relative overflow-hidden"
  >
    <!-- Background Elements -->
    <div class="absolute top-0 left-0 w-full h-full">
      <div
        class="absolute top-1/4 left-1/4 w-96 h-96 bg-indigo-600/20 rounded-full blur-[120px] animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-600/20 rounded-full blur-[120px] animate-pulse"
        style="animation-delay: 2s"
      >
      </div>
    </div>

    <div
      class="w-full max-w-md bg-slate-950/50 backdrop-blur-xl border border-slate-800 p-10 rounded-[2.5rem] shadow-2xl relative z-10"
    >
      <div class="text-center mb-10">
        <div
          class="w-16 h-16 bg-gradient-to-tr from-indigo-500 to-purple-600 rounded-2xl mx-auto mb-6 flex items-center justify-center shadow-lg shadow-indigo-500/20"
        >
          <span class="text-2xl font-black text-white">B</span>
        </div>
        <h1 class="text-3xl font-bold text-white mb-2">Bienvenido</h1>
        <p class="text-slate-400">
          Inicia sesión para personalizar tu bento grid
        </p>
      </div>

      <div class="space-y-4">
        <button
          id="loginGoogle"
          class="w-full group bg-white hover:bg-slate-50 text-slate-900 font-bold py-4 px-6 rounded-2xl transition-all flex items-center justify-center gap-3 active:scale-95 shadow-lg shadow-white/5"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
              fill="#EA4335"
              d="M12.48 10.92v3.28h7.84c-.24 1.84-.92 3.32-1.92 4.48c-1.12 1.12-2.8 2.24-5.92 2.24c-5.04 0-9.04-4.08-9.04-9.12s4-9.12 9.04-9.12c2.72 0 4.72 1.08 6.16 2.48l2.32-2.32C19.04 1.36 16.2 0 12.48 0C5.64 0 0 5.64 0 12.48s5.64 12.48 12.48 12.48c3.68 0 6.48-1.2 8.64-3.48c2.2-2.2 2.92-5.28 2.92-7.84c0-.52-.04-1.12-.12-1.64z"
            ></path></svg
          >
          Continuar con Google
        </button>

        <div class="relative py-4">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-slate-800"></div>
          </div>
          <div class="relative flex justify-center text-xs uppercase">
            <span class="bg-transparent px-2 text-slate-500">O también</span>
          </div>
        </div>

        <a
          href="/portada"
          class="w-full block text-center bg-slate-900 hover:bg-slate-800 text-slate-300 font-bold py-4 rounded-2xl border border-slate-800 transition-all"
        >
          Ver demo pública
        </a>
      </div>

      <p class="text-center mt-10 text-xs text-slate-500">
        Al continuar, aceptas nuestros <a
          href="#"
          class="text-indigo-400 hover:underline">Términos de Servicio</a
        >
      </p>
    </div>
  </main>
</Layout>

<script>
  const { signIn } = await import("auth-astro/client");
  const loginBtn = document.querySelector("#loginGoogle");

  if (loginBtn) {
    loginBtn.addEventListener("click", async () => {
      await signIn("google");
    });
  }
</script>

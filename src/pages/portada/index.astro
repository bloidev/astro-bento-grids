---
import Layout from "../../layouts/Layout.astro";

const list = ["Empresa A", "Empresa B", "Empresa C", "Empresa D", "Empresa E"];
---

<style>
  .picture {
    background-image: url("/img/Foto-C.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .picture-1 {
    background-image: url("/img/Foto-B.png");
    background-position: center;
    background-size: cover;
  }

  .profile-bg {
    background-image: url("/img/profile-twitch.png");
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
  }

  .bento-item {
    @apply bg-slate-900/50 border border-slate-800 rounded-3xl p-6 transition-all duration-300 hover:border-green-500/50 hover:shadow-[0_0_20px_rgba(34,197,94,0.15)] backdrop-blur-sm flex flex-col;
  }
</style>

<Layout title="Bloidev | Bento Grid">
  <main class="min-h-screen bg-[#010703] text-white selection:bg-green-500/30">
    <article
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-7xl mx-auto p-4 md:p-8"
    >
      <!-- Bloidev Title - Main Brand -->
      <div
        class="bento-item md:col-span-2 lg:col-span-2 lg:row-span-1 flex items-center justify-center bg-gradient-to-br from-slate-900 to-slate-950"
      >
        <h1
          class="text-5xl md:text-7xl font-black bg-clip-text text-transparent bg-gradient-to-r from-white to-slate-500 tracking-tighter"
        >
          Bloidev
        </h1>
      </div>

      <!-- Profile & Socials -->
      <div
        class="bento-item lg:col-span-1 lg:row-span-2 overflow-hidden !p-0 group"
      >
        <div class="relative h-full w-full">
          <img
            src="/img/Foto-A.png"
            alt="Bloidev"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent opacity-80"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <ul class="flex justify-around items-center">
              <li class="flex flex-col items-center gap-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-pink-500"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><rect x="2" y="2" width="20" height="20" rx="5" ry="5"
                  ></rect><path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                  ></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"
                  ></line></svg
                >
                <span
                  class="text-[10px] uppercase font-bold tracking-widest text-slate-400"
                  >IG</span
                >
              </li>
              <li class="flex flex-col items-center gap-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-blue-400"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path
                    d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                  ></path></svg
                >
                <span
                  class="text-[10px] uppercase font-bold tracking-widest text-slate-400"
                  >TW</span
                >
              </li>
              <li class="flex flex-col items-center gap-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-purple-500"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path
                    d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                  ></path></svg
                >
                <span
                  class="text-[10px] uppercase font-bold tracking-widest text-slate-400"
                  >DC</span
                >
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Patreon -->
      <div class="bento-item lg:col-span-1 lg:row-span-1 group">
        <h4 class="text-xl font-bold text-orange-500 mb-2">Patreon</h4>
        <ul class="flex flex-wrap gap-2">
          {
            list.map((item) => (
              <li class="bg-slate-950/50 text-xs py-1 px-3 rounded-full border border-slate-800 group-hover:border-orange-500/30 transition-colors">
                {item}
              </li>
            ))
          }
        </ul>
        <div class="mt-auto pt-4 flex justify-end">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 text-slate-600 transition-transform group-hover:translate-x-1"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><line x1="7" y1="17" x2="17" y2="7"></line><polyline
              points="7 7 17 7 17 17"></polyline></svg
          >
        </div>
      </div>

      <!-- Sobre mí -->
      <div class="bento-item md:col-span-2 lg:col-span-2 lg:row-span-1">
        <div class="flex items-center gap-3 mb-3">
          <h4 class="text-2xl font-bold">Sobre mí</h4>
          <div class="h-1 w-12 bg-green-600 rounded-full"></div>
        </div>
        <p class="text-slate-400 leading-relaxed">
          Software Developer de <span class="text-white font-medium"
            >Santiago de Chile</span
          >. Me apasiona la tecnología y la creación de soluciones innovadoras
          que impacten positivamente.
        </p>
      </div>

      <!-- Picture 1 -->
      <div
        class="bento-item picture-1 lg:col-span-1 lg:row-span-1 min-h-[150px]"
      >
      </div>

      <!-- Twitch Link -->
      <a
        href="https://twitch.tv/bloidev"
        target="_blank"
        class="bento-item lg:col-span-1 lg:row-span-2 group !p-0 overflow-hidden bg-purple-900/10"
      >
        <div
          class="relative h-full w-full flex flex-col items-center justify-center p-6 bg-gradient-to-br from-purple-900/20 to-transparent"
        >
          <div
            class="profile w-24 h-24 mb-4 transition-transform group-hover:scale-110 group-hover:rotate-3 duration-500"
          >
            <div class="profile-bg"></div>
          </div>
          <span
            class="font-black text-xl tracking-tight group-hover:text-purple-400 transition-colors"
            >Twitch.tv/bloidev</span
          >
          <div class="absolute top-4 right-4 animate-pulse">
            <div class="w-3 h-3 bg-red-600 rounded-full"></div>
          </div>
        </div>
      </a>

      <!-- Categorías -->
      <div
        class="bento-item md:col-span-2 lg:col-span-2 lg:row-span-1 bg-gradient-to-r from-slate-900/80 to-slate-950"
      >
        <h4 class="font-bold text-3xl mb-4">Categorías</h4>
        <div class="flex flex-wrap gap-2 mt-auto">
          {
            ["Development", "Design", "Gaming", "Tech", "Live"].map((tag) => (
              <span class="bg-indigo-500/10 text-indigo-400 text-xs font-bold py-1 px-3 rounded-lg border border-indigo-500/20">
                {tag}
              </span>
            ))
          }
        </div>
      </div>

      <!-- Contact Info -->
      <div class="bento-item lg:col-span-1 lg:row-span-1">
        <h4 class="font-bold text-lg mb-2">Contacto</h4>
        <p class="text-slate-400 text-sm mb-4 break-all">
          contacto@bloidev.com
        </p>
        <button
          class="w-full bg-green-700/20 hover:bg-green-700 text-green-500 hover:text-white py-2 rounded-xl transition-all flex items-center justify-center gap-2 text-sm font-bold border border-green-700/30"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z"
            ></path><path
              d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1"
            ></path></svg
          >
          Copiar Email
        </button>
      </div>

      <!-- Picture 2 -->
      <div class="bento-item picture lg:col-span-1 lg:row-span-1 min-h-[150px]">
      </div>

      <!-- GitHub Projects -->
      <div class="bento-item md:col-span-2 lg:col-span-2 lg:row-span-1">
        <h4 class="font-bold text-3xl mb-4">Proyectos GitHub</h4>
        <div class="grid grid-cols-2 gap-3 mt-auto">
          <div class="bg-slate-950/50 p-3 rounded-2xl border border-slate-800">
            <div class="w-2 h-2 bg-yellow-500 rounded-full mb-1"></div>
            <p class="text-xs font-bold">astro-bento</p>
          </div>
          <div class="bg-slate-950/50 p-3 rounded-2xl border border-slate-800">
            <div class="w-2 h-2 bg-blue-500 rounded-full mb-1"></div>
            <p class="text-xs font-bold">react-dashboard</p>
          </div>
        </div>
      </div>
    </article>
  </main>
</Layout>
